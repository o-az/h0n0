{
  "$schema": "https://esm.sh/oxfmt/configuration_schema.json",
  "ignorePatterns": ["_", "dist", "node_modules"],
  "semi": false,
  "enabled": true,
  "lineWidth": 100,
  "indentWidth": 2,
  "printWidth": 100,
  "proseWrap": "never",
  "arrowParens": "avoid",
  "jsxSingleQuote": true,
  "bracketSpacing": true,
  "indentStyle": "space",
  "quoteStyle": "single",
  "trailingComma": "none",
  "bracketSameLine": true,
  "insertFinalNewline": true,
  "attributePosition": "auto",
  "indentScriptAndStyle": true,
  "singleAttributePerLine": true,
  "selfCloseVoidElements": "never"
}
